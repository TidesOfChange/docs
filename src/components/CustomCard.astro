---
export interface Props {
  title: string;
  description: string;
  titleBorderColor?: string;
  titleBackgroundColor?: string;
}

import { nextColor } from '../components/ColorCycle.js';

const color = nextColor();

const titleBorderColor = Astro.props.titleBorderColor ?? color;
const titleBackgroundColor = Astro.props.titleBackgroundColor ?? color;
const { title, description } = Astro.props as Props;
---

<div class="not-content card">
    <h2 style={`border: 2px solid rgba(${titleBorderColor}, .8); background-color: rgba(${titleBackgroundColor}, 0.25); box-shadow: 0 0 0 1px black;`}>{title}</h2>
    <p>{description}</p>
</div>

<style>
    .card {
        border: 1px solid #464646;
        border-radius: 1px;
        padding: 30px;
    }
    .card h2 {
        font-family: 'Tahoma', sans-serif;
        color: #ffffff;
        text-shadow: -1px 1px 0 #000, 1px 1px 0 #000, -1px -1px 0 #000, 1px -1px 0 #000;
        padding: 5px;
        border-radius: 5px;
        font-size: 1.4em;
        margin-bottom: 8px;
    }
    .card p {
        font-family: 'Tahoma', sans-serif;
        font-size: 1em;
    }
</style>